<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/hl_close_gray2"
            android:visibility="gone" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/icon_error" />

        <TextView
            android:id="@+id/nDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:textColor="@color/blue"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 对话框消息内容 -->

    <TextView
        android:id="@+id/nDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/color33"
        android:textSize="16sp" />

    <!-- 对话框确定/取消按钮 -->

    <LinearLayout
        android:id="@+id/nDialogBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nDialogBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nDialogBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nDialogBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nDialogBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nDialogBtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>